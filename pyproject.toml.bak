[project]
name = "ncaa-basketball-pipeline"
version = "0.1.0"
description = "Add your description here"
readme = "README.md"
requires-python = ">=3.12"
dependencies = [
    "dagster>=1.10.13",
    "dagster-dlt>=0.26.13",
    "dagster-webserver>=1.10.13",
    "dlt>=1.10.0",
    "duckdb>=1.2.2",
    "pandas>=2.2.3",
    "requests>=2.32.3",
]

[dependency-groups]
dev = [
    "ipykernel>=6.29.5",
    "jupyter>=1.1.1",
    "pre-commit>=4.2.0",
    "pytest>=8.3.5",
    "ruff>=0.11.8",
]

[build-system]
requires = ["setuptools"]
build-backend = "setuptools.build_meta"

[tool.dagster]
module_name = "ncaa_basketball_pipeline.definitions"
code_location_name = "ncaa_basketball_pipeline"

[tool.setuptools.packages.find]
exclude=["ncaa_basketball_pipeline_tests"]
